<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center"
    tools:context=".Fragment.ListaFilmesFragment" android:orientation="vertical">

    <LinearLayout
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menufavoritos"
            android:background="@drawable/ic_menu_black_24dp"/>
        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

            android:background="@drawable/ic_chevron_2left_black_24dp"
        android:id="@+id/fragment_voltar"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_chevron_right_black_24dp"
            android:id="@+id/fragment_Avancar"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_search_category_default"
            android:id="@+id/pesquisardinamica"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:paddingTop="20dp"
        android:id="@+id/lista_filmes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>